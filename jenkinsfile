pipeline {
    agent any
    
    stages {
        stage('Clean Workspace') {
            steps {
                script {
                    cleanWs()
                }
            }
        }
        
        stage('Build and Test') {
            steps {
                script {
                    // Clean and compile the project
                    //sh 'mvn clean compile'
                    
                    // Run the tests
                    sh 'mvn test'
                }
            }
            
            post {
                always {
                    script {
                        // Archive the test results for Jenkins to pick up
                        junit 'target/surefire-reports/*.xml'
                    }
                }
            }
        }
    }
}
