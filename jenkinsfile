pipeline {
    agent any

    stages {
        stage('Build and Test') {
            steps {
                script {
                    // Clean and compile the project
                    //bat 'mvn clean compile'

                    // Run the tests
                    bat 'mvn test'
                }
            }
            post {
                always {
                    script {
                        // Archive the test results for Jenkins to pick up
                        junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
                        def testResult = junit testResults: '**/target/surefire-reports/*.xml'
                        currentBuild.description = "Tests: ${testResult.failCount} failed"
                    }
                }
            }
        }
    }
}
